---
interface Props {
  project: {
    title: string
    link?: string
    time: string
  }
}

const {
  project: { title, link, time },
} = Astro.props
---

<article class="p-4 border border-slate-300 hover:border-slate-400 hover:shadow-md	relative top-0 transition-top hover:top-1">
  <div>
    <h3 class="text-center p-4 sm:text-xl">{title}</h3>
    {link ? <a class="link block text-center sm:text-xl" href=`https://${link}` target="_blank">{link}</a> : <br/> }
  </div>
  <div>
    <p class="px-4 my-4 sm:text-xl">
      <slot />
    </p>
    <div class="flex justify-end">
      <time datetime={`${time}`}>{time}</time>
    </div>
  </div>
</article>